background no 
cpu_avg_samples 2
net_avg_samples 2
no_buffers yes
out_to_console yes
update_interval 1.0
uppercase no
use_spacer none
pad_percents 2

TEXT
 | ^fg(\#00cc33)^i(/home/drew/.dzen/icons/xbm8x8/cpu.xbm)^fg() ${cpu cpu1}% ${cpu cpu2}% | ^fg(\#00cc33)^i(/home/drew/.dzen/icons/xbm8x8/mem.xbm)^fg() $mem / $memmax | ^fg(\#00cc33)^i(/home/drew/.dzen/icons/xbm8x8/net_wired.xbm)^fg() ${downspeed eth0}^i(/home/drew/.dzen/icons/xbm8x8/net_down_01.xbm) ${upspeed eth0}^i(/home/drew/.dzen/icons/xbm8x8/net_up_02.xbm) kB/s  | ${time %H:%M}
